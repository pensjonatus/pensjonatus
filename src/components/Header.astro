---
import Navigation from '@components/Navigation.astro';
import ThemeIcon from './ThemeIcon.astro';
import SearchBox from './SearchBox.astro';
---

<header>
  <div class="top">
    <Navigation />
    <div class="right">
      <div class="top-search-box">
        <SearchBox />
      </div>
      <ThemeIcon />
    </div>
  </div>
  <div class="bottom">
    <SearchBox />
  </div>
</header>

<style>
  header {
    padding: var(--outer-padding);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .top {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .top-search-box {
    display: none;
  }

  .bottom {
    display: flex;
    justify-content: flex-end;
  }

  .right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .right a {
    text-decoration: none;
  }

  @media screen and (min-width: 636px) {
    .bottom {
      display: none;
    }

    .top-search-box {
      display: block;
    }
  }
</style>
