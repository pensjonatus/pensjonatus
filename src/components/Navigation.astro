---
const routes = [
  {
    slug: `${import.meta.env.BASE_URL}/`,
    label: 'Stories',
  },
  {
    slug: `${import.meta.env.BASE_URL}/tags`,
    label: 'Tags',
  },
];
const currentPath = Astro.url.pathname;
---

<nav role="navigation" aria-label="Main menu">
  <div class="nav">
    {
      routes.map(({ slug, label }) => {
        const isActive = `${import.meta.env.BASE_URL}/${currentPath}` === slug;
        return (
          <a
            class={isActive ? 'active' : undefined}
            href={isActive ? undefined : slug}
            aria-current={isActive ? 'page' : undefined}
          >
            {label}
          </a>
        );
      })
    }
  </div>
</nav>

<style>
  .nav {
    display: flex;
    gap: 1rem;
  }

  .nav a {
    color: var(--text-color);
    text-decoration: none;
    padding: 6px 0;
  }

  a.active {
    color: gray !important;
    cursor: default;
  }
</style>
